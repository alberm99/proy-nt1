@model Reservas_de_Canchas.Models.Cancha

@{
    ViewData["Title"] = "Editar cancha";
}

<h1>Editar cancha</h1>

<h4>Cancha</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @*<input type="hidden" asp-for="NroCancha" />*@
            @Html.HiddenFor(Model => Model.NroCancha)
            <div class="form-group">
                <label asp-for="NombreCancha" class="control-label"></label>
                <input asp-for="NombreCancha" class="form-control" />
                <span asp-validation-for="NombreCancha" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Habilitada" /> Estado Habilitada@*@Html.DisplayNameFor(model => model.Habilitada)*@
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Importe" class="control-label"></label>
                <input asp-for="Importe" class="form-control" type="number"/>
                <span asp-validation-for="Importe" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar cambios" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Regresar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
