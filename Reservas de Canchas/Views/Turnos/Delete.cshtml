@model Reservas_de_Canchas.Models.Turno

@{
    ViewData["Title"] = "Eliminar Turno";
}

<h1>Eliminar</h1>

<h3>Estas seguro de borrar este turno?</h3>
<div>
    <h4>Detalle del Turno</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FechaHora)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FechaHora)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.EmailClienteNavigation)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EmailClienteNavigation.Email)
        </dd class>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NroCanchaNavigation)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NroCanchaNavigation.NombreCancha)
        </dd class>
