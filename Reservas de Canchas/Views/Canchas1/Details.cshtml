@model Reservas_de_Canchas.Models.Cancha

@{
    ViewData["Title"] = "Informacion Cancha";
}

<h1>Detalles</h1>

<div>
    <h4>Cancha</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NombreCancha)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NombreCancha)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Habilitada)
        </dt>
        <dd class="col-sm-10">
            @if (Model.Habilitada)
            {
                <p>Habilitada</p>
            }
            else
            {
                <p>Deshabilitada</p>
            }  
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Importe)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Importe)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.NroCancha">Editar</a> |
    <a asp-action="Index">Regresar</a>
</div>
