@model IEnumerable<Reservas_de_Canchas.Models.Cliente>

@{
    ViewData["Title"] = "Clientes";
}

<h1>Lista de Clientes</h1>

<p>
    <a asp-action="Create">Crear nuevo cliente</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contraseña)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Puntos)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Contraseña)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Puntos)
            </td>
            <td>
                @*<a asp-action="Edit" asp-route-id="@item.Email">Editar</a> |*@
                @*<a asp-action="Details" asp-route-id="@item.Email">Detalles</a>*@ 
                @*<a asp-action="Delete" asp-route-id="@item.Email">Delete</a>*@
                @Html.ActionLink("Detalles", "Details", "Clientes", new { @item.Email })
            </td>
        </tr>
}
    </tbody>
</table>
